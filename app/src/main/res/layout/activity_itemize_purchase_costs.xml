<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0e0e0"
    android:theme="@style/colorControlActivatedGreen"
    tools:context=".ui.Evaluate.Itemize.PurchaseCost.ItemizePurchaseCostActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="20sp"
                android:text="Itemize"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/copy_switch"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

            </android.support.v7.widget.SwitchCompat>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"

                app:errorTextAppearance="@style/Error">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:enabled="false"
                    android:visibility="invisible"
                    android:textSize="20sp"
                    android:hint="Street"
                    android:inputType="textCapWords"
                    android:text="0" />

            </android.support.design.widget.TextInputLayout>




        </LinearLayout>

        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:overScrollMode="never"
            android:fadingEdgeLength="0dp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <LinearLayout

                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:textColor="@color/green_dark_text"
                    android:textSize="20sp"
                    android:text="Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <android.support.design.widget.TextInputLayout
                    android:gravity="center_vertical"
                    android:layout_width="100dp"

                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"

                    app:errorTextAppearance="@style/Error">

                    <android.support.design.widget.TextInputEditText
                        android:textColor="@color/green_dark_text"
                        android:gravity="right"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Total"
                        android:text="0"
                        android:textSize="20sp"
                        android:inputType="textCapWords"
                        android:backgroundTint="@android:color/transparent"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <View
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/bordered_circle" />

                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_add_green" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/bordered_circle" />

                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_edit_accent" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/bordered_circle" />

                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_shuffle_accent" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/bordered_circle" />

                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_delete_red" />
            </FrameLayout>

        </LinearLayout>

        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
</LinearLayout>
